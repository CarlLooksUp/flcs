<h1>Player Stats</h1>
<h2><%= @player.name %></h2>
<h3><%= @player.position %> <%= " - " + @player.team.name unless @player.team.blank? %></h3>

<div class="row">
  <div id="playerChartContainer" data-player-id="<%= @player.id %>">
    <canvas id="playerChart" width="800" height="400"></canvas>
  </div>
</div>

<div class="row" id="playerComment">
  <div class="panel panel-default">
    <div class="panel-heading">
      Recent Analysis
    </div>
    <div class="panel-body">
      <% unless @recent_comment.nil? %>
        <%= @recent_comment.comment %>
        <span class="pull-right"><%= @recent_comment.created_at %></span>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table id="player-stats" class="table table-hover">
      <% if @player.position == "Team" %>
        <%= render 'team_stat_table', team: @player %>
      <% else %>
        <%= render 'player_stat_table', player: @player %>
      <% end %>
    </table>
  </div>
</div>
